<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.musplays_userdebug.Player">

    <View
        android:id="@+id/touchRegion"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="307dp"
        android:layout_height="319dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/album"
        tools:layout_editor_absoluteY="0dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@+id/btFB"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="84dp"
        android:valueFrom="0.0"
        android:valueTo="100.0" />


    <Button
        android:id="@+id/btPlay"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btFF"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="159dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="60dp"
        android:text="@string/play"
        android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
        app:iconTint="@color/on_primary"
        tools:layout_editor_absoluteY="393dp" />

    <Button
        android:id="@+id/btFF"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="60dp"
        android:layout_toStartOf="@+id/btNxt"
        android:text="@string/ff"
        android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
        tools:layout_editor_absoluteY="393dp" />

    <Button
        android:id="@+id/btNxt"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btPlay"
        android:layout_alignBottom="@+id/btPlay"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-1dp"
        android:background="#00FFFFFF"
        android:foreground="@drawable/skip_next_24dp_e3e3e3_fill0_wght400_grad0_opsz24"
        android:foregroundTint="?android:attr/colorPrimary"
        android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
        tools:layout_editor_absoluteY="393dp" />

    <Button
        android:id="@+id/btPv"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btFB"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:background="#00FFFFFF"
        android:foreground="@drawable/skip_previous_24dp_e3e3e3_fill0_wght400_grad0_opsz24"
        android:foregroundTint="?android:attr/colorPrimary"
        android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
        tools:layout_editor_absoluteY="393dp"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btFB"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btPlay"
        android:layout_alignBottom="@+id/btPlay"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/btPv"
        android:text="@string/fb"
        android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
        tools:layout_editor_absoluteY="393dp" />

    <TextView
        android:id="@+id/texttitle"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_above="@+id/slider"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="36dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20sp" />


</RelativeLayout>
